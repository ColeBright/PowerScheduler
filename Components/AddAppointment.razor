@inherits AddAppointmentBase
@if (ShowDialog)
{
    <div class="modal fade show d-block" id="exampleModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="titleLabel">Add Appointment</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="alert @StatusClass">@Message</div>
                    <EditForm Model="@Appointment" OnSubmit="@HandleSubmit">

                        <DataAnnotationsValidator />
                        <ValidationSummary />
                        <div class="row" style="margin-bottom: 16px">
                            <div class="col-md-3">
                                @if (Athletes != null)
                                {
                                <ModifiedOption id="athlete" class="form-control col-sm-8" @bind-Value="@Appointment.AthleteId">
                                    @foreach (var athlete in Athletes)
                                                {
                                    <option value="@athlete.Id">@athlete.FullName</option>
                                                }
                                </ModifiedOption>
                                <ValidationMessage For="@(() => Athlete.Id)" />
                                }
                            </div>
                        </div>
                        <div class="row" style="margin-bottom: 16px">
                            <div class="col-md-3">
                                <RadzenLabel Text="Start" />
                            </div>
                            <div class="col">
                                <RadzenDatePicker @bind-Value="@Appointment.Start" Name="Start" ShowTime="true" />
                                <ValidationMessage For="@(() => Appointment.Start)" />
                            </div>
                        </div>
                        <div class="row" style="margin-bottom: 16px">
                            <div class="col-md-3">
                                <RadzenLabel Text="End" />
                            </div>
                            <div class="col">
                                <RadzenDatePicker Name="End" @bind-Value="@Appointment.End" ShowTime="true" />
                                <ValidationMessage For="@(() => Appointment.End)" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3"></div>
                            <div class="col">
                                <RadzenButton ButtonType="Radzen.ButtonType.Submit" Text="Save" />
                            </div>

                        </div>
                    </EditForm>

                </div>
            </div>
        </div>
    </div>
}


