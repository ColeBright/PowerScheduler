@inherits EditAthleteBase


@if (ShowDialog)
{
    <div class="modal fade show d-block" id="exampleModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="titleLabel">Edit Athlete</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <EditForm Model="@Athlete" OnValidSubmit="@HandleValidSubmit">

                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <div class="form-group">
                            <label for="FullName">Full name: </label>
                            <InputText id="FullName" class="form-control" @bind-Value="@Athlete.FullName" placeholder="Enter first name"></InputText>
                            <ValidationMessage For="@(() => Athlete.FullName)" />
                        </div>

                        <div class="form-group">
                            <label for="Bench">Bench 1 rep max: </label>
                            <InputNumber id="bench" class="form-control" @bind-Value="@Athlete.Bench" placeholder="Enter 1 rep max"></InputNumber>
                            <ValidationMessage For="@(() => Athlete.Bench)" />
                        </div>
                        <div class="form-group">
                            <label for="Squat">Squat 1 rep max: </label>
                            <InputNumber id="squat" class="form-control" @bind-Value="@Athlete.Squat" placeholder="Enter 1 rep max"></InputNumber>
                            <ValidationMessage For="@(() => Athlete.Squat)" />
                        </div>
                        <div class="form-group">
                            <label for="Deadlift">Deadlift 1 rep max: </label>
                            <InputNumber id="deadlift" class="form-control" @bind-Value="@Athlete.Deadlift" placeholder="Enter 1 rep max"></InputNumber>
                            <ValidationMessage For="@(() => Athlete.Deadlift)" />
                        </div>

                        <button type="submit" class="btn btn-primary">Save</button>
                        <a class="btn btn-outline-primary" @onclick="@Close">Close</a>
                        @if (Athlete.Id > 0)
                        {
                            <a class="btn btn-danger" @onclick="@DeleteAthleteAsync">
                                Delete
                            </a>
                        }
                    </EditForm>

                </div>
            </div>
        </div>
    </div>
}
